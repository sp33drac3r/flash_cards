<%= erb :nav %>
<div class="row center">
  <div class="col s12 m2 offset-m5">
  </div>
</div>
<div class="row">
  <div class="container center">
    <h1 class="orange-text">Welcome <img src="https://pixabay.com/static/uploads/photo/2016/04/01/11/55/bird-1300443_960_720.png" class="responsive-img eagle-icon"/></h1>
    <div class="col s12 m6 offset-m3 l4 offset-l4">

      <form action="/login" method="POST">
        <span><%= @error %></span><br>
        <div class="row">
          <div class="input-field col s12">
            <label for="username" data-error="wrong" data-success="right">Username</label>
            <input id="input_text" name="username" type="text" class="validate" length="65">
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <label for="password">Password</label>
            <input id="input_text" type="password" name="password" class="validate" length="65">
          </div>
        </div>
        <input type="submit" value="Login" class="btn waves-effect waves-light orange"></input>
      </form>
    </div>
  </div>
</div>

<div class="row center">
  <a href="/users/new" class="btn waves-effect waves-light orange">Sign Up</a>
</div>

